<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dao.JobEntity" table="job" schema="lawfirm">
        <id name="jobId">
            <column name="job_id" sql-type="int(4) unsigned"/>
        </id>
        <property name="function">
            <column name="function" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <set name="employeesByJobId" inverse="true">
            <key>
                <column name="job_id"/>
            </key>
            <one-to-many not-found="ignore" class="dao.EmployeeEntity"/>
        </set>
    </class>
</hibernate-mapping>