<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dao.EmployeeEntity" table="employee" schema="lawfirm">
        <id name="employeeId">
            <column name="employee_id" sql-type="int(4) unsigned"/>
        </id>
        <property name="firstname">
            <column name="firstname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="lastname">
            <column name="lastname" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="mail">
            <column name="mail" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(45)" length="45"/>
        </property>
        <many-to-one name="jobByJobId" class="dao.JobEntity">
            <column name="job_id"/>
        </many-to-one>
        <many-to-one name="educationByEducationId" class="dao.EducationEntity">
            <column name="education_id"/>
        </many-to-one>
        <set name="salesOrdersByEmployeeId" inverse="true">
            <key>
                <column name="employee_id"/>
            </key>
            <one-to-many not-found="ignore" class="dao.SalesOrderEntity"/>
        </set>
    </class>
</hibernate-mapping>