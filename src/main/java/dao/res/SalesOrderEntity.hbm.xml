<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dao.SalesOrderEntity" table="sales_order" schema="lawfirm">
        <id name="id">
            <column name="id" sql-type="int(4) unsigned"/>
        </id>
        <property name="orderDate">
            <column name="order_date" sql-type="date" not-null="true"/>
        </property>
        <many-to-one name="customerByCustomerId" class="dao.CustomerEntity">
            <column name="customer_id"/>
        </many-to-one>
        <many-to-one name="employeeByEmployeeId" class="dao.EmployeeEntity">
            <column name="employee_id"/>
        </many-to-one>
        <many-to-one name="serviceByServiceId" class="dao.ServiceEntity">
            <column name="service_id"/>
        </many-to-one>
    </class>
</hibernate-mapping>